<%- include('../../fragments/header.ejs') %>
<%- include('../../fragments/logout.ejs') %>
    <main>
        <h2><%= __('client.list.title') %></h2>
        <table class="table-list">
            <thead>
                <tr>
                    <th><%= __('client.fields.firstName') %></th>
                    <th><%= __('client.fields.lastName') %></th>
                    <th><%= __('list.actions.title') %></th>
                </tr>
            </thead>
            <tbody>
                <% for (let client of clients) { %>
                    <tr>
                        <td><%= client.imie %></td>
                        <td><%= client.nazwisko %></td>
                        <td>
                            <ul class="list-actions">
                                <li><a href="/clients/details/<%=client._id%>" class="list-actions-button-details"><%= __('list.actions.details') %></a></li>
                                <li><a href="/clients/edit/<%=client._id%>" class="list-actions-button-edit"><%= __('list.actions.edit') %></a></li>
                                <li><a href="/clients/delete/<%=client._id%>" class="list-actions-button-delete"><%= __('list.actions.delete') %></a></li>
                            </ul>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
        <p><a href="/clients/add" class="button-add"><%= __('client.list.addNew') %></a></p>
    </main>
    <%- include('../../fragments/footer.ejs') %>