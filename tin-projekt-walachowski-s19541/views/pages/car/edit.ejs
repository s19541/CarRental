<%- include('../../fragments/header.ejs') %>
    <main>
        <h2>Edytuj dane pojazdu</h2>
        <form class="form" novalidate onsubmit="return validateForm();">
                
                <label for="marka" class="">marka:<sup>*</sup></label>
                <input type="text" name="marka" id="marka" value="Ford" placeholder="2-60 znaków"/>
                <span id="errorMarka" class="errors-text"></span>
            
                <label for="model">model:<sup>*</sup></label>
                <input type="text" name="model" id="model" value="Mustang" placeholder="2-60 znaków"/>
                <span id="errorModel" class="errors-text"></span>
            
                <label for="cenaZaGodzine">cena za godzine:<sup>*</sup></label>
                <input type="number" name="cenaZaGodzine" id="cenaZaGodzine" value="100" placeholder="10-500 pln"/>
                <span id="errorCenaZaGodzine" class="errors-text"></span>
           
                <label for="cenaZaKilometr">cena za kilometr:<sup>*</sup></label>
                <input type="number" name="cenaZaKilometr" id="cenaZaKilometr" value="10" placeholder="10-200 pln"/>
                <span id="errorCenaZaKilometr" class="errors-text"></span>
            
                <label for="kaucja">kaucja:<sup>*</sup></label>
                <input type="number" name="kaucja" id="kaucja" value="1000" />
                <span id="errorKaucja" class="errors-text"></span>
                
            <div class="form-buttons">
                <p id="errorsSummary" class="errors-text"></p>
                <input type="submit" class="form-button-submit" value="Zatwierdź" />
                <a href="/cars" class="form-button-cancel">Anuluj</a>    
            </div>
        </form>
    </main>
    <%- include('../../fragments/footer.ejs') %>